
@model EMR.Models.Patient.Patient

@{
    ViewData["Title"] = "EMR";
}

<!DOCTYPE html>

<html>
<head>
    <title>EMR</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/styles.css" rel="stylesheet" type="text/css">
    <script src="js/script.js" type="text/javascript"></script>
</head>
<body>
    <div style="background-color: #00BCD4; width:100%; padding:10px ">
        <br />

        @using (Html.BeginForm("Date", "Encounter", null))
        {
            @Html.HiddenFor(model => model.Name)
            @Html.ValidationSummary(true)
            <p>
                <input type="submit" value="NEW ENCOUNTER (Option1)" />
            </p>
        }<br><br>

        <h5>Patient: </h5>
        @Html.DisplayFor(model => model.Name)
        <br /><br />
        <h5>Age: </h5>@Html.DisplayFor(model => model.Age)
        <br /><br />
        <h5>Height: </h5>@Html.DisplayFor(model => model.Info.Height)
        <br /><br />
        <h5>Weight: </h5>@Html.DisplayFor(model => model.Info.Weight)
        <br /><br />
        <h5>Gender: </h5>@Html.DisplayFor(model => model.Info.Gender)
        <br /><br />
        <h5>Address: </h5>@Html.DisplayFor(model => model.Info.Address)
        @Html.DisplayFor(model => model.Info.City)
        @Html.DisplayFor(model => model.Info.State)
        @Html.DisplayFor(model => model.Info.Zipcode)
        <br /><br />
        <h5>DOB: </h5>@Html.DisplayFor(model => model.Info.DOB)
        <br /><br />
        <h5>Primary Insurance: </h5>@Html.DisplayFor(model => model.Info.PrimaryIns)
        <br /><br />
        <h5>Primary Physician: </h5>@Html.DisplayFor(model => model.Info.PrimaryPhys)
        <br /><br />
        <h5>Allergies: </h5>@Html.DisplayFor(model => model.Info.Allergies)
        <br /><br />
        <h5>Current Medications: </h5>@Html.DisplayFor(model => model.Info.CurrentMedications)
        <br /><br />
        <br /><br />

        @using (Html.BeginForm("Index", "DisplayEncounters", null))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Name)
            <p>
                <input type="submit" value="See All Previous Encounters" />
            </p>
        }

        <br /><br />     

         @using (Html.BeginForm("Full", "ENCOUNTER", null))
        {
            @Html.HiddenFor(model => model.Name)
            @Html.ValidationSummary(true)

            <p>
                <input type="submit" value="NEW ENCOUNTER (Option2)" />
            </p>
        }<br><br>
</body>
</html>